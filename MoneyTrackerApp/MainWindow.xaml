<Window x:Class="MoneyTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MoneyTrackerApp.ViewModel"
        Title="Money Tracker" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма добавления -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Text="{Binding Description}" PlaceholderText="Описание" Width="200"/>
            <TextBox Text="{Binding Amount}" PlaceholderText="Сумма" Width="100" Margin="5,0"/>
            <ComboBox ItemsSource="{Binding Source={EnumBindingSource {x:Static local:TransactionType}}}"
                      SelectedItem="{Binding Type}" Width="100"/>
            <Button Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>

        <!-- Список транзакций -->
        <ListView ItemsSource="{Binding Transactions}" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Баланс -->
        <TextBlock Text="{Binding Balance, StringFormat='Баланс: {0:C}'}" 
                   HorizontalAlignment="Right" FontSize="16" Grid.Row="2"/>
    </Grid>
</Window>