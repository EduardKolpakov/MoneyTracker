<Window x:Class="MoneyTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MoneyTrackerApp.ViewModel"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:lib="clr-namespace:MoneyTrackerLibrary.Model;assembly=MoneyTrackerLibrary"
        Title="Money Tracker" Height="450" Width="800">

    <Window.Resources>
        <ObjectDataProvider x:Key="TransactionTypes"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="lib:TransactionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Форма добавления -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="DescriptionTextBox"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     Width="200">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="Text" Value="Описание"/>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" 
                     Width="100" Margin="5,0">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="Text" Value="Сумма"/>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <ComboBox ItemsSource="{Binding Source={StaticResource TransactionTypes}}"
                      SelectedItem="{Binding Type}" Width="100"/>

            <Button Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>

        <!-- Список транзакций -->
        <ListView ItemsSource="{Binding Transactions}" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding Amount}"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Type}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Баланс -->
        <TextBlock Text="{Binding Balance, StringFormat='Баланс: {0:C}'}" 
                   HorizontalAlignment="Right" FontSize="16" Grid.Row="2"/>
    </Grid>
</Window>